{
  "server": {
    "http": {
      "enabled": true,
      "port": 3001
    },
    "https": {
      "enabled": false
    }
  },
  "db": {
    "uri": "mongodb://localhost:27017/jobscope_test"
  },
  "security": {
    "jwt": {
      "secret": "test-secret",
      "expiresIn": "1h"
    },
    "cors": {
      "origin": ["*"]
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 10000
    },
    "bcrypt": {
      "saltRounds": 4
    }
  }
}