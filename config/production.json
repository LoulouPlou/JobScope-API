{
  "server": {
    "http": {
      "enabled": true,
      "port": 80
    },
    "https": {
      "enabled": true,
      "port": 443,
      "keyPath": "./ssl/key.pem",
      "certPath": "./ssl/cert.pem",
      "redirectAllHttpToHttps": true
    },
    "trustProxy": true
  },
  "security": {
    "cors": {
      "origin": [],
      "credentials": true
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    },
    "bcrypt": {
      "saltRounds": 12
    }
  }
}